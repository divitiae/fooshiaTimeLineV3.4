<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="fill_horizontal"
    android:orientation="horizontal"
    android:layout_height="22dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent">
    <TextView
        android:id="@+id/Likecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="11dp"
        android:gravity="start|center"
        android:layout_gravity="center"
        android:textColor="?attr/colorReact"
        android:textSize="12sp"
        android:maxLines="1"
        android:lines="1"
        android:text=""
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Commentcount"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:gravity="end"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:tag="false"
        android:layout_gravity="end"
        android:text=""
        android:textColor="?attr/colorReact"
        android:drawableTint="?attr/colorReact"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/icon_post_comment_small_vector"
        android:maxLines="1"
        android:lines="1"
        android:paddingTop="0dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_alignParentEnd="true" /> 
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Sharecount"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:gravity="end"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="5dp"
        android:tag="false"
        android:layout_gravity="end"
        android:text=""
        android:textColor="?attr/colorReact"
        android:drawableTint="?attr/colorReact"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/icon_post_share_small_vector"
        android:maxLines="1"
        android:lines="1"
        android:paddingTop="0dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_toStartOf="@+id/Commentcount" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewcount"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:gravity="end"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:tag="false"
        android:layout_gravity="end"
        android:text=""
        android:textColor="?attr/colorReact"
        android:maxLines="1"
        android:lines="1"
        android:paddingTop="0dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_toStartOf="@+id/Sharecount" />
   
  
    <View
android:layout_marginStart="10dp"
android:layout_marginEnd="10dp"
      android:layout_alignParentBottom="true"
      android:layout_marginTop="0dp"
      android:background="?attr/colorBubble"
      android:layout_width="match_parent"
      android:layout_height="1dp"/>
</RelativeLayout>